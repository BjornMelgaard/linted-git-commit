{
  "compilerOptions": {
    "moduleResolution": "node",

    "strict": true,
    "lib": ["es5", "es6", "dom"],
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": false
  }
}
