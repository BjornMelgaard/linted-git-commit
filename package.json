{
  "name": "linted-git-commit",
  "version": "0.0.2",
  "description": "Lint commit message using commitlint, commit if message is valid, show useful info about your config on -h flag",
  "author": "BjornMelgaard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BjornMelgaard/linted-git-commit.git"
  },
  "bugs": {
    "url": "https://github.com/BjornMelgaard/linted-git-commit/issues"
  },
  "bin": {
    "linted-git-commit": "./dist/cli.js"
  },
  "scripts": {
    "lint:base": "eslint --ignore-path .gitignore",
    "lint": "yarn run lint:base .",
    "lint:fix": "yarn run lint:base --fix .",
    "format:base": "prettier --config './.prettierrc.yaml' --ignore-path './.gitignore' --write",
    "format": "yarn run format:base './**/*.{js,jsx,json}'",
    "format-fix": "yarn run format && yarn run lint:fix",
    "precommit": "lint-staged",
    "test": "jest",
    "build": "gulp build",
    "build:watch": "gulp watch",
    "prepublishOnly": "yarn run build"
  },
  "engines": {
    "node": ">=4"
  },
  "lint-staged": {
    "*.js": [
      "yarn run format:base",
      "yarn run lint:base --fix",
      "git add"
    ]
  },
  "keywords": [
    "commitlint",
    "git",
    "commit",
    "lint"
  ],
  "dependencies": {
    "@commitlint/core": "^5.2.0",
    "chalk": "^2.2.0",
    "cosmiconfig": "^3.1.0",
    "dedent": "^0.7.0",
    "execa": "^0.8.0",
    "marked": "^0.3.6",
    "marked-terminal": "^2.0.0",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.0.0"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-preset-env": "^1.6.1",
    "del": "^3.0.0",
    "eslint": "3.12.2",
    "eslint-config-standard": "11.0.0-beta.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-promise": "3.4.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "2.0.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.7.4"
  }
}
